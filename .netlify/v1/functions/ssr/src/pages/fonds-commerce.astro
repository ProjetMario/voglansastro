---
import Base from '@/layouts/Base.astro';
import Section from '@/components/ui/Section.astro';
import Badge from '@/components/ui/Badge.astro';
import { 
  TrendingUp, 
  Users, 
  Calculator,
  CheckCircle,
  Building2,
  MapPin,
  Target
} from 'lucide-react';

const meta = {
  title: "Fonds de Commerce | Agence de Voglans | Cession Savoie",
  description: "Cédez votre fonds de commerce au meilleur prix en Savoie. Restaurants, boutiques, salons - Expertise locale et accompagnement personnalisé.",
  keywords: ["fonds commerce savoie", "cession entreprise savoie", "vente restaurant savoie", "cession boutique savoie"]
};
---

<Base title={meta.title} description={meta.description}>
  <Fragment slot="head">
    <meta name="keywords" content={meta.keywords.join(', ')} />
  </Fragment>

  <!-- Hero Section -->
  <Section size="lg" className="bg-gradient-to-b from-primary/5 to-background">
    <div class="text-center mb-16">
      <Badge variant="success" className="mb-6">
        Cession d'entreprise
      </Badge>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        Fonds de <span class="gradient-text">Commerce</span>
      </h1>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Cédez votre restaurant, boutique ou salon au meilleur prix avec notre expertise
        locale et notre réseau d'entrepreneurs et investisseurs qualifiés.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <TrendingUp className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">85%</div>
          <div class="text-sm text-muted font-medium">Taux de réussite</div>
        </div>
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <Users className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">120</div>
          <div class="text-sm text-muted font-medium">Acquéreurs actifs</div>
        </div>
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <Calculator className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">6 mois</div>
          <div class="text-sm text-muted font-medium">Délai moyen cession</div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Nos expertises -->
  <Section>
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        Notre expertise <span class="gradient-text">sectorielle</span>
      </h2>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Chaque secteur d'activité nécessite une approche spécifique.
        Découvrez nos spécialités en Savoie.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Restauration -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <Building2 className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Restaurants & Bars</h3>
        <p class="text-muted leading-relaxed mb-4">
          Évaluation basée sur le chiffre d'affaires, la rentabilité et l'emplacement stratégique.
        </p>
        <div class="text-sm text-primary font-medium">CA moyen : 450k€</div>
      </div>

      <!-- Commerce de détail -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <Building2 className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Boutiques & Commerce</h3>
        <p class="text-muted leading-relaxed mb-4">
          Analyse de la clientèle, de l'emplacement commercial et du potentiel de développement.
        </p>
        <div class="text-sm text-primary font-medium">Rentabilité : 15-25%</div>
      </div>

      <!-- Services -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <Building2 className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Salons & Services</h3>
        <p class="text-muted leading-relaxed mb-4">
          Évaluation de la base clients, des équipements et du carnet de commandes.
        </p>
        <div class="text-sm text-primary font-medium">Valeur client : 800€</div>
      </div>
    </div>
  </Section>

  <!-- Fonds de Commerce par ville -->
  <Section background="muted">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        Fonds de <span class="gradient-text">Commerce</span> par ville
      </h2>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Prix de cession et rentabilité actualisés pour les fonds de commerce dans chaque ville de Savoie.
        Évaluation précise selon l'activité et la localisation.
      </p>
    </div>

    <!-- Chambéry et environs -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Chambéry et environs</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/fonds-commerce-chambery" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Chambéry</h4>
            <p class="text-sm text-muted">280k€ CA • 18% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-aix-les-bains" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Aix-les-Bains</h4>
            <p class="text-sm text-muted">320k€ CA • 22% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-le-bourget-du-lac" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Le Bourget-du-Lac</h4>
            <p class="text-sm text-muted">380k€ CA • 25% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-la-motte-servolex" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">La Motte-Servolex</h4>
            <p class="text-sm text-muted">220k€ CA • 16% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-bassens" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Bassens</h4>
            <p class="text-sm text-muted">190k€ CA • 14% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-la-ravoire" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">La Ravoire</h4>
            <p class="text-sm text-muted">160k€ CA • 12% rentabilité</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Proche Chambéry -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Proche Chambéry</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/fonds-commerce-cognin" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Cognin</h4>
            <p class="text-sm text-muted">140k€ CA • 11% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-barberaz" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Barberaz</h4>
            <p class="text-sm text-muted">150k€ CA • 13% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-saint-alban-leysse" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Saint-Alban-Leysse</h4>
            <p class="text-sm text-muted">170k€ CA • 15% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-voglans" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Voglans</h4>
            <p class="text-sm text-muted">145k€ CA • 14% rentabilité</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Lac du Bourget -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Lac du Bourget</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/fonds-commerce-tresserve" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Tresserve</h4>
            <p class="text-sm text-muted">290k€ CA • 20% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-viviers-du-lac" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Viviers-du-Lac</h4>
            <p class="text-sm text-muted">260k€ CA • 18% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-bourdeau" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Bourdeau</h4>
            <p class="text-sm text-muted">340k€ CA • 24% rentabilité</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Combe de Savoie -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Combe de Savoie</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/fonds-commerce-montmelian" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Montmélian</h4>
            <p class="text-sm text-muted">120k€ CA • 10% rentabilité</p>
          </div>
        </a>
        <a href="/fonds-commerce-saint-pierre-d-albigny" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Saint-Pierre-d'Albigny</h4>
            <p class="text-sm text-muted">95k€ CA • 8% rentabilité</p>
          </div>
        </a>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <div class="card bg-primary/5 border-primary/20">
        <h3 class="text-2xl font-semibold mb-4">Évaluer votre fonds de commerce</h3>
        <p class="text-muted mb-6">
          Analyse précise basée sur votre chiffre d'affaires, rentabilité et potentiel de développement.
        </p>
        <a href="/estimation" class="btn btn-primary">
          <Calculator className="w-5 h-5" />
          Estimation fonds de commerce
        </a>
      </div>
    </div>
  </Section>
</Base>
