---
import Base from '@/layouts/Base.astro';
import Section from '@/components/ui/Section.astro';
import Badge from '@/components/ui/Badge.astro';
import {
  TrendingUp,
  Users,
  Calculator,
  CheckCircle,
  Building2,
  MapPin,
  Target,
  Home,
  Crown,
  Sparkles
} from 'lucide-react';

const meta = {
  title: "Propriétés de Prestige | Agence de Voglans | Demeures d'Exception",
  description: "Découvrez les propriétés de prestige en Savoie. Villas haut de gamme, demeures de caractère et biens d'exception avec accompagnement personnalisé.",
  keywords: ["propriete prestige savoie", "demeure caractere savoie", "villa luxe savoie", "bien exceptionnel savoie"]
};
---

<Base title={meta.title} description={meta.description}>
  <Fragment slot="head">
    <meta name="keywords" content={meta.keywords.join(', ')} />
    <!-- Canonical URL propriétés prestige -->
    <link rel="canonical" href="https://agencevoglans.fr/proprietes-prestige" />
  </Fragment>

  <!-- Hero Section -->
  <Section size="lg" className="bg-gradient-to-b from-primary/5 to-background">
    <div class="text-center mb-16">
      <Badge variant="success" className="mb-6">
        Propriétés d'exception
      </Badge>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        Propriétés de <span class="gradient-text">Prestige</span>
      </h1>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Découvrez les demeures d'exception et villas haut de gamme en Savoie.
        Prestations luxueuses, emplacements privilégiés et architecture remarquable.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <Crown className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">1.2M€</div>
          <div class="text-sm text-muted font-medium">Prix moyen</div>
        </div>
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <Sparkles className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">15</div>
          <div class="text-sm text-muted font-medium">Biens d'exception</div>
        </div>
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <Calculator className="w-6 h-6 text-primary" />
          </div>
          <div class="text-3xl font-bold text-primary mb-2">8 mois</div>
          <div class="text-sm text-muted font-medium">Délai de vente</div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Caractéristiques prestige -->
  <Section>
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        Demeures <span class="gradient-text">d'exception</span>
      </h2>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Chaque propriété de prestige raconte une histoire unique et offre des prestations
        rares sur le marché immobilier savoyard.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Architecture -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <Building2 className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Architecture remarquable</h3>
        <p class="text-muted leading-relaxed mb-4">
          Maisons d'architecte, demeures historiques ou villas contemporaines avec des éléments uniques.
        </p>
        <div class="text-sm text-primary font-medium">Design d'exception</div>
      </div>

      <!-- Emplacement -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <MapPin className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Emplacements privilégiés</h3>
        <p class="text-muted leading-relaxed mb-4">
          Vues panoramiques sur les montagnes, accès lac, proximité centre-ville avec tranquillité.
        </p>
        <div class="text-sm text-primary font-medium">Sites d'exception</div>
      </div>

      <!-- Prestations -->
      <div class="card text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <Sparkles className="w-8 h-8 text-primary" />
        </div>
        <h3 class="text-xl font-semibold mb-4">Prestations luxueuses</h3>
        <p class="text-muted leading-relaxed mb-4">
          Piscines, spas, caves à vins, domotique haut de gamme et finitions sur mesure.
        </p>
        <div class="text-sm text-primary font-medium">Luxe & confort</div>
      </div>
    </div>
  </Section>

  <!-- Propriétés de Prestige par ville -->
  <Section background="muted">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        Propriétés de <span class="gradient-text">Prestige</span> par ville
      </h2>
      <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
        Sélection exclusive de demeures d'exception en Savoie. Prix à partir de 800 000€
        avec des caractéristiques uniques et des emplacements rares.
      </p>
    </div>

    <!-- Chambéry et environs -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Chambéry et environs</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/propriete-prestige-chambery" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Chambéry</h4>
            <p class="text-sm text-muted">1.2M€ • Vue montagnes</p>
          </div>
        </a>
        <a href="/propriete-prestige-aix-les-bains" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Aix-les-Bains</h4>
            <p class="text-sm text-muted">1.8M€ • Bord du lac</p>
          </div>
        </a>
        <a href="/propriete-prestige-le-bourget-du-lac" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Le Bourget-du-Lac</h4>
            <p class="text-sm text-muted">2.5M€ • Domaine privé</p>
          </div>
        </a>
        <a href="/propriete-prestige-la-motte-servolex" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">La Motte-Servolex</h4>
            <p class="text-sm text-muted">950k€ • Villa moderne</p>
          </div>
        </a>
        <a href="/propriete-prestige-bassens" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Bassens</h4>
            <p class="text-sm text-muted">880k€ • Jardin paysager</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Proche Chambéry -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Proche Chambéry</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/propriete-prestige-cognin" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Cognin</h4>
            <p class="text-sm text-muted">820k€ • Contemporaine</p>
          </div>
        </a>
        <a href="/propriete-prestige-barberaz" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Barberaz</h4>
            <p class="text-sm text-muted">890k€ • Vue dégagée</p>
          </div>
        </a>
        <a href="/propriete-prestige-saint-alban-leysse" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Saint-Alban-Leysse</h4>
            <p class="text-sm text-muted">1.1M€ • Parc arboré</p>
          </div>
        </a>
        <a href="/propriete-prestige-voglans" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Voglans</h4>
            <p class="text-sm text-muted">860k€ • Architecture design</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Lac du Bourget -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Lac du Bourget</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/propriete-prestige-tresserve" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Tresserve</h4>
            <p class="text-sm text-muted">1.6M€ • Pied du lac</p>
          </div>
        </a>
        <a href="/propriete-prestige-viviers-du-lac" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Viviers-du-Lac</h4>
            <p class="text-sm text-muted">1.4M€ • Vue panoramique</p>
          </div>
        </a>
        <a href="/propriete-prestige-bourdeau" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Bourdeau</h4>
            <p class="text-sm text-muted">2.2M€ • Propriété vignoble</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Combe de Savoie -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-6 text-center">Combe de Savoie</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <a href="/propriete-prestige-montmelian" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Montmélian</h4>
            <p class="text-sm text-muted">780k€ • Maison bourgeoise</p>
          </div>
        </a>
        <a href="/propriete-prestige-challes-les-eaux" class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="text-center">
            <h4 class="font-semibold mb-2">Challes-les-Eaux</h4>
            <p class="text-sm text-muted">920k€ • Villa thermale</p>
          </div>
        </a>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <div class="card bg-primary/5 border-primary/20">
        <h3 class="text-2xl font-semibold mb-4">Découvrir les propriétés d'exception</h3>
        <p class="text-muted mb-6">
          Présentation confidentielle et visite privée des demeures les plus remarquables de Savoie.
        </p>
        <a href="/estimation" class="btn btn-primary">
          <Crown className="w-5 h-5" />
          Demande de présentation
        </a>
      </div>
    </div>
  </Section>
</Base>
