---
import Base from '@/layouts/Base.astro';
---

<Base title="Guides Gratuits Immobiliers | L'Agence de Voglans" description="Téléchargez nos 5 guides immobiliers gratuits pour réussir votre projet : vente, diagnostics, estimation, fiscalité, préparation.">
  <section class="min-h-screen bg-gradient-to-br from-primary/5 via-white to-primary/10 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        
        <!-- Header -->
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
