  Search,
  SlidersHorizontal,
  MapPin,
  Home,
  Euro,
  Maximize,
  Calculator,
  Phone,
  Star,
  Sparkles,
  ArrowRight,
  CheckCircle,
  Building,
  Users,
  HandHeart,
  Eye,
  DollarSign,
  Briefcase,
  Target,
  Award,
  TrendingUp,
  ChevronDown,
  Play,
  Filter,
  Grid3X3,
  List
} from 'lucide-react';

// Simulation de données - à remplacer par les vraies données des Content Collections
const properties = [
  {
    slug: 'maison-voglans-moderne',
    data: {
      title: 'Maison moderne avec vue sur le lac',
      type: 'maison',
      ville: 'Voglans',
      surface: 150,
      pieces: 5,
      prix: 485000,
      images: ['/images/properties/villa-1.jpg'],
      energie: 'A',
      badges: ['exclusivite']
    }
  },
  {
    slug: 'appartement-chambery-centre',
    data: {
      title: 'Appartement T3 centre-ville rénové',
      type: 'appartement',
      ville: 'Chambéry',
      surface: 75,
      pieces: 3,
      prix: 285000,
      images: ['/images/properties/appart-1.jpg'],
      energie: 'C',
      badges: ['nouveau']
    }
  },
  {
