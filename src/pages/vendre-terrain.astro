---
import Base from '../layouts/Base.astro';
import { Phone, Calculator, CheckCircle, MapPin, TrendingUp, FileText, Ruler } from 'lucide-react';

const meta = {
  title: "Vendre un Terrain en Savoie | Estimation gratuite | Agence de Voglans",
  description: "Vendez votre terrain en Savoie au meilleur prix. Expertise constructibilité, PLU, viabilisation. Estimation gratuite. +15% de prix de vente. Contactez-nous !",
  keywords: ["vendre terrain Savoie", "vendre terrain constructible Chambéry", "terrain à bâtir Savoie", "estimation terrain gratuite", "PLU Savoie"]
};
---

<Base title={meta.title} description={meta.description}>
  <Fragment slot="head">
    <meta name="keywords" content={meta.keywords.join(', ')} />
  </Fragment>

  <!-- Hero Premium -->
  <section class="relative bg-gradient-to-br from-primary/10 via-white to-primary/5 py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-[0.03]">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-primary rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm border border-primary/20 text-primary px-6 py-3 rounded-full text-sm font-semibold shadow-lg mb-8">
          <MapPin className="w-5 h-5" />
          <span>Spécialiste Vente de Terrains en Savoie</span>
        </div>

        <h1 class="text-5xl md:text-6xl lg:text-7xl font-light mb-6 tracking-tight text-foreground leading-[1.1]">
          Vendez Votre Terrain<br/>
          <span class="font-semibold bg-gradient-to-r from-primary to-primary/70 bg-clip-text text-transparent">Au Meilleur Prix</span>
        </h1>

        <p class="text-xl md:text-2xl text-muted max-w-3xl mx-auto leading-relaxed font-light mb-12">
          Notre expertise en <span class="text-primary font-medium">urbanisme</span> et <span class="text-primary font-medium">constructibilité</span> valorise votre terrain au maximum.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a 
            href="#formulaire" 
            class="group relative bg-gradient-to-r from-primary to-primary/90 text-white px-10 py-5 rounded-full text-lg font-semibold inline-flex items-center justify-center gap-3 hover:scale-105 hover:shadow-2xl transition-all duration-300 overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
            <Calculator className="w-6 h-6 relative z-10" />
            <span class="relative z-10">Estimation gratuite en 2 min</span>
          </a>
          
          <a 
            href="tel:+33757830262" 
            class="group bg-white/80 backdrop-blur-sm border-2 border-primary/30 text-primary px-10 py-5 rounded-full text-lg font-semibold inline-flex items-center justify-center gap-3 hover:bg-primary hover:text-white hover:scale-105 hover:shadow-xl transition-all duration-300"
          >
            <Phone className="w-6 h-6" />
            <span>07 57 83 02 62</span>
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
            <div class="text-3xl font-bold text-primary mb-2">+20%</div>
            <div class="text-sm text-muted font-medium">Prix vs terrain non valorisé</div>
          </div>
          <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
            <div class="text-3xl font-bold text-primary mb-2">60 jours</div>
            <div class="text-sm text-muted font-medium">Délai de vente moyen</div>
          </div>
          <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-primary/10 shadow-lg">
            <div class="text-3xl font-bold text-primary mb-2">98%</div>
            <div class="text-sm text-muted font-medium">Clients satisfaits</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Prix Moyens Terrains Savoie -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-light mb-6 text-foreground">
            Prix des Terrains en <span class="font-semibold text-primary">Savoie</span>
          </h2>
          <p class="text-xl text-muted max-w-3xl mx-auto">
            Prix au m² selon localisation et constructibilité (2024)
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">Chambéry</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">450 €/m²</div>
              <div class="text-sm text-muted">Terrain constructible viabilisé</div>
              <div class="text-sm text-muted">Délai moyen : 55 jours</div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">Aix-les-Bains</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">520 €/m²</div>
              <div class="text-sm text-muted">Terrain vue lac</div>
              <div class="text-sm text-muted">Délai moyen : 50 jours</div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">La Ravoire</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">380 €/m²</div>
              <div class="text-sm text-muted">Terrain à bâtir</div>
              <div class="text-sm text-muted">Délai moyen : 60 jours</div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">Voglans</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">350 €/m²</div>
              <div class="text-sm text-muted">Terrain constructible</div>
              <div class="text-sm text-muted">Délai moyen : 65 jours</div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">Cognin</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">320 €/m²</div>
              <div class="text-sm text-muted">Terrain à viabiliser</div>
              <div class="text-sm text-muted">Délai moyen : 70 jours</div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 border border-primary/10 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <MapPin className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-xl font-semibold text-foreground">Le Bourget-du-Lac</h3>
            </div>
            <div class="space-y-2">
              <div class="text-3xl font-bold text-primary">480 €/m²</div>
              <div class="text-sm text-muted">Terrain proche lac</div>
              <div class="text-sm text-muted">Délai moyen : 58 jours</div>
            </div>
          </div>
        </div>

        <div class="mt-12 text-center">
          <a 
            href="#formulaire" 
            class="inline-flex items-center gap-2 text-primary font-semibold hover:gap-3 transition-all duration-300"
          >
            <span>Obtenir une estimation précise pour mon terrain</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Checklist Technique Terrain -->
  <section class="py-20 bg-gradient-to-br from-primary/5 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-light mb-6 text-foreground">
            Checklist : <span class="font-semibold text-primary">Vendre un Terrain</span>
          </h2>
          <p class="text-xl text-muted max-w-3xl mx-auto">
            Documents et démarches essentiels pour maximiser la valeur
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Urbanisme & PLU -->
          <div class="bg-white rounded-3xl p-8 shadow-lg">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <FileText className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-2xl font-semibold text-foreground">Urbanisme & PLU</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Certificat d'urbanisme opérationnel</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Plan Local d'Urbanisme (PLU)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Zonage (constructible, agricole, naturel)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Coefficient d'occupation des sols (COS)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Servitudes d'utilité publique</span>
              </li>
            </ul>
          </div>

          <!-- Viabilisation -->
          <div class="bg-white rounded-3xl p-8 shadow-lg">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <TrendingUp className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-2xl font-semibold text-foreground">Viabilisation</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Raccordement eau potable</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Raccordement électricité</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Assainissement (tout-à-l'égout ou individuel)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Accès voirie (desserte, voie carrossable)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Devis viabilisation si non viabilisé</span>
              </li>
            </ul>
          </div>

          <!-- Bornage & Géomètre -->
          <div class="bg-white rounded-3xl p-8 shadow-lg">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <Ruler className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-2xl font-semibold text-foreground">Bornage & Mesures</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Plan de bornage par géomètre</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Surface exacte cadastrale</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Limites de propriété définies</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Accord des voisins sur les limites</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Plan topographique (si terrain en pente)</span>
              </li>
            </ul>
          </div>

          <!-- Études & Diagnostics -->
          <div class="bg-white rounded-3xl p-8 shadow-lg">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
                <FileText className="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-2xl font-semibold text-foreground">Études & Diagnostics</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Étude de sol G1 (obligatoire)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">État des risques (naturels, miniers, pollution)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Diagnostic amiante (si construction existante)</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Absence de termites</span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle className="w-5 h-5 text-primary flex-shrink-0 mt-1" />
                <span class="text-muted">Titre de propriété et historique</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-12 bg-gradient-to-r from-primary to-primary/90 rounded-3xl p-8 text-center text-white">
          <h3 class="text-2xl font-semibold mb-4">Expert en Urbanisme</h3>
          <p class="text-white/90 mb-6 text-lg">
            Nous gérons toutes les démarches administratives pour valoriser votre terrain
          </p>
          <a 
            href="#formulaire" 
            class="inline-flex items-center gap-3 bg-white text-primary px-8 py-4 rounded-full font-semibold hover:scale-105 transition-all duration-300"
          >
            <span>Demander un Accompagnement</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Formulaire d'Estimation Terrain -->
  <section id="formulaire" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-light mb-6 text-foreground">
            Estimation <span class="font-semibold text-primary">Gratuite</span>
          </h2>
          <p class="text-xl text-muted">
            Recevez une estimation précise de votre terrain sous 48h
          </p>
        </div>

        <div class="bg-gradient-to-br from-primary/5 to-white rounded-3xl p-8 md:p-12 border border-primary/10 shadow-xl">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-foreground mb-2">Type de terrain</label>
                <select class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all">
                  <option>Constructible</option>
                  <option>À viabiliser</option>
                  <option>Agricole</option>
                  <option>Non constructible</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground mb-2">Surface</label>
                <input type="number" placeholder="800 m²" class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground mb-2">Viabilisé</label>
                <select class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all">
                  <option>Oui (eau, électricité, assainissement)</option>
                  <option>Partiellement</option>
                  <option>Non</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground mb-2">PLU / Zonage</label>
                <select class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all">
                  <option>Zone U (urbaine)</option>
                  <option>Zone AU (à urbaniser)</option>
                  <option>Zone A (agricole)</option>
                  <option>Zone N (naturelle)</option>
                  <option>Je ne sais pas</option>
                </select>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-foreground mb-2">Adresse du terrain</label>
              <input type="text" placeholder="Adresse complète" class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-foreground mb-2">Votre nom</label>
                <input type="text" placeholder="Nom complet" class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground mb-2">Téléphone</label>
                <input type="tel" placeholder="06 12 34 56 78" class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-foreground mb-2">Email</label>
              <input type="email" placeholder="votre@email.com" class="w-full px-4 py-3 rounded-xl border border-primary/20 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" />
            </div>

            <button 
              type="submit"
              class="w-full bg-gradient-to-r from-primary to-primary/90 text-white px-8 py-5 rounded-full text-lg font-semibold hover:scale-105 hover:shadow-2xl transition-all duration-300 flex items-center justify-center gap-3"
            >
              <Calculator className="w-6 h-6" />
              <span>Recevoir Mon Estimation gratuite</span>
            </button>

            <p class="text-sm text-muted text-center">
              Réponse sous 48h • 100% gratuit • Sans engagement
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="py-20 bg-gradient-to-br from-primary to-primary/90">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-4xl md:text-5xl font-light mb-6">
          Prêt à Vendre Votre Terrain au <span class="font-semibold">Meilleur Prix</span> ?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Contactez-nous dès maintenant pour une estimation gratuite et sans engagement
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="tel:+33757830262" 
            class="inline-flex items-center gap-3 bg-white text-primary px-10 py-5 rounded-full text-lg font-semibold hover:scale-105 transition-all duration-300"
          >
            <Phone className="w-6 h-6" />
            <span>07 57 83 02 62</span>
          </a>
          <a 
            href="#formulaire" 
            class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-10 py-5 rounded-full text-lg font-semibold hover:bg-white/20 hover:scale-105 transition-all duration-300"
          >
            <span>Formulaire en Ligne</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }

  .animate-float {
