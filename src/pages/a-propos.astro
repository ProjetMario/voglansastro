---
import Base from '@/layouts/Base.astro';
import StatsUltra from '@/components/ui/StatsUltra.astro';
import StatUltra from '@/components/ui/StatUltra.astro';
import CardUltra from '@/components/ui/CardUltra.astro';
import ButtonUltra from '@/components/ui/ButtonUltra.astro';
import {
  MapPin,
  Users,
  Heart,
  Award,
  Target,
  Shield,
  Handshake,
  TrendingUp,
  Clock,
  Star,
  Phone,
  CheckCircle,
  Building,
  Home,
  Zap,
  Globe,
  HandHeart,
  Eye,
  DollarSign,
  Briefcase,
  Calendar,
  Sparkles,
  ArrowRight,
  ChevronDown,
  Play,
  Calculator,
  Crown,
  Users as UsersIcon,
  TrendingUp as TrendingUpIcon,
  Clock as ClockIcon,
  Shield as ShieldIcon,
  Star as StarIcon,
  Award as AwardIcon,
  Target as TargetIcon,
  MapPin as MapPinIcon
} from 'lucide-react';
import { siteConfig } from '@/lib/utils';
---

<Base
  title="À propos de L'Agence de Voglans - 100% Locale & Humaine"
  description="Découvrez L'Agence de Voglans, première agence 100% digitale de Voglans. Expertise locale en Savoie, processus modernes et service humain personnalisé."
>
  <!-- Hero Section Révolutionnaire -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-primary via-primary/90 to-primary/80">
    <!-- Fond animé avec particules -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-white/5 rounded-full blur-2xl animate-pulse delay-1000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] border border-white/20 rounded-full animate-spin opacity-20" style="animation-duration: 20s;"></div>
    </div>

    <!-- Grille de fond géométrique -->
    <div class="absolute inset-0 opacity-10">
      <svg width="100%" height="100%" class="absolute inset-0">
        <defs>
          <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
            <path d="M 50 0 L 0 0 0 50" fill="none" stroke="white" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <div class="container mx-auto px-4 relative z-10 text-center">
      <div class="max-w-5xl mx-auto">
        <!-- Badge flottant -->
        <div class="inline-flex items-center gap-3 bg-white/20 backdrop-blur-xl border border-white/30 text-white px-6 py-3 rounded-full text-sm font-semibold shadow-2xl mb-12 animate-float">
          <Sparkles className="w-4 h-4" />
          <span>Notre Révolution</span>
        </div>

        <!-- Titre principal avec effet typographique -->
        <h1 class="text-6xl md:text-8xl font-black mb-8 leading-none">
          <span class="block text-white mb-4">L'IMMOBILIER</span>
          <span class="block bg-gradient-to-r from-yellow-300 via-orange-300 to-red-300 bg-clip-text text-transparent animate-gradient">
            RÉINVENTÉ
          </span>
        </h1>

        <!-- Baseline avec style moderne -->
        <p class="text-2xl md:text-3xl text-white/90 font-light mb-12 max-w-4xl mx-auto leading-relaxed">
          Première agence 100% digitale de Voglans,<br>
          nous révolutionnons l'immobilier traditionnel avec une approche
          <span class="font-semibold text-white">résolument moderne</span>
        </p>

        <!-- CTA avec design futuriste -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contact" class="group relative bg-white text-primary px-8 py-4 rounded-2xl font-bold text-lg hover:shadow-2xl hover:shadow-white/25 transition-all duration-300 inline-flex items-center gap-3 hover:scale-105">
            <Crown className="w-5 h-5 group-hover:animate-bounce" />
            <span>DÉCOUVRIR NOTRE VISION</span>
          </a>
          <a href="#histoire" class="group flex items-center gap-3 text-white/90 hover:text-white transition-all duration-300">
            <span class="text-lg">En savoir plus</span>
            <ChevronDown className="w-6 h-6 group-hover:translate-y-1 transition-transform duration-300" />
          </a>
        </div>
      </div>
    </div>

    <!-- Indicateur de scroll -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Stats Section Révolutionnaire -->
  <section class="py-32 bg-white relative overflow-hidden">
    <!-- Éléments décoratifs asymétriques -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-primary/20 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-80 h-80 bg-gradient-to-br from-yellow-200/30 to-transparent rounded-full blur-2xl"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-6xl mx-auto">
        <StatsUltra>
          <StatUltra value="2025" label="Création révolutionnaire" />
          <StatUltra value="100%" label="Processus digital" />
          <StatUltra value="Local" label="Expertise Savoie" />
          <StatUltra value="24h" label="Réponse immédiate" />
        </StatsUltra>
      </div>
    </div>
  </section>

  <!-- Histoire avec Design Révolutionnaire -->
  <section id="histoire" class="py-32 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
    <!-- Formes organiques en arrière-plan -->
    <div class="absolute inset-0 opacity-30">
      <svg viewBox="0 0 1200 800" class="absolute inset-0 w-full h-full">
        <path d="M0,400 C300,200 600,600 900,300 C1050,150 1200,450 1200,400 L1200,800 L0,800 Z" fill="url(#gradient1)" />
        <path d="M300,100 C500,300 700,50 1000,250 C1100,350 1200,200 1200,400 L1200,0 L300,0 Z" fill="url(#gradient2)" />
        <defs>
          <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#10B981" stop-opacity="0.3" />
            <stop offset="100%" stop-color="#F59E0B" stop-opacity="0.1" />
          </linearGradient>
          <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#8B5CF6" stop-opacity="0.2" />
            <stop offset="100%" stop-color="#10B981" stop-opacity="0.1" />
          </linearGradient>
        </defs>
      </svg>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-3 bg-gradient-to-r from-primary/10 to-yellow-200/20 backdrop-blur-sm border border-primary/20 text-primary px-6 py-3 rounded-full text-sm font-semibold shadow-xl mb-8">
            <Sparkles className="w-4 h-4 animate-spin" />
            <span>Notre Genèse</span>
          </div>
          <h2 class="text-5xl md:text-7xl font-black mb-8">
            Notre <span class="bg-gradient-to-r from-primary via-green-400 to-yellow-400 bg-clip-text text-transparent">Histoire</span>
          </h2>
        </div>

        <!-- Timeline Révolutionnaire -->
        <div class="relative">
          <!-- Ligne verticale centrale -->
          <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-gradient-to-b from-primary via-green-400 to-yellow-400 h-full rounded-full"></div>

          <!-- Étapes de la timeline -->
          <div class="space-y-32">
            <!-- Étape 1 -->
            <div class="relative flex items-center">
              <div class="w-1/2 pr-16 text-right">
                <CardUltra className="group ml-auto max-w-lg">
                  <div class="flex items-start gap-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-primary to-green-400 rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                      <Zap className="w-10 h-10 text-white" />
                    </div>
                    <div>
                      <h3 class="text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors duration-300">La Vision</h3>
                      <p class="text-muted leading-relaxed text-lg">
                        L'Agence de Voglans naît d'une conviction profonde : l'immobilier traditionnel doit évoluer.
                        Nous refusons le statu quo et imaginons un avenir où technologie rime avec proximité humaine.
                      </p>
                    </div>
                  </div>
                </CardUltra>
              </div>

              <!-- Point central -->
              <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 bg-gradient-to-br from-primary to-yellow-400 rounded-full border-4 border-white shadow-2xl z-10"></div>

              <div class="w-1/2 pl-16">
                <div class="text-sm text-muted font-semibold mb-2">2025</div>
                <h4 class="text-xl font-bold text-foreground">Création révolutionnaire</h4>
              </div>
            </div>

            <!-- Étape 2 -->
            <div class="relative flex items-center">
              <div class="w-1/2 pr-16 text-right">
                <div class="text-sm text-muted font-semibold mb-2">Position stratégique</div>
                <h4 class="text-xl font-bold text-foreground">Ancrage local</h4>
              </div>

              <!-- Point central -->
              <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 bg-gradient-to-br from-green-400 to-yellow-400 rounded-full border-4 border-white shadow-2xl z-10"></div>

              <div class="w-1/2 pl-16">
                <CardUltra className="group">
                  <div class="flex items-start gap-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-green-400 to-yellow-400 rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                      <Globe className="w-10 h-10 text-white" />
                    </div>
                    <div>
                      <h3 class="text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors duration-300">Expertise Territoriale</h3>
                      <p class="text-muted leading-relaxed text-lg">
                        Au cœur de Voglans, nous maîtrisons parfaitement le marché savoyard.
                        Notre implantation stratégique nous permet d'intervenir efficacement sur l'ensemble du territoire.
                      </p>
                    </div>
                  </div>
                </CardUltra>
              </div>
            </div>

            <!-- Étape 3 -->
            <div class="relative flex items-center">
              <div class="w-1/2 pr-16 text-right">
                <CardUltra className="group ml-auto max-w-lg">
                  <div class="flex items-start gap-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-yellow-400 to-orange-400 rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                      <HandHeart className="w-10 h-10 text-white" />
                    </div>
                    <div>
                      <h3 class="text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors duration-300">L'Humain d'abord</h3>
                      <p class="text-muted leading-relaxed text-lg">
                        Nous croyons profondément que la technologie doit servir l'humain.
                        Chaque projet immobilier est une histoire personnelle qui mérite une attention unique.
                      </p>
                    </div>
                  </div>
                </CardUltra>
              </div>

              <!-- Point central -->
              <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 bg-gradient-to-br from-yellow-400 to-orange-400 rounded-full border-4 border-white shadow-2xl z-10"></div>

              <div class="w-1/2 pl-16">
                <div class="text-sm text-muted font-semibold mb-2">Philosophie</div>
                <h4 class="text-xl font-bold text-foreground">Accompagnement personnalisé</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Valeurs avec Design Révolutionnaire -->
  <section class="py-32 bg-black text-white relative overflow-hidden">
    <!-- Fond avec effets de lumière -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-1/2 bg-gradient-to-b from-primary/20 to-transparent"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-yellow-400/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-20">
          <h2 class="text-5xl md:text-7xl font-black mb-8">
            Nos <span class="bg-gradient-to-r from-primary via-green-400 to-yellow-400 bg-clip-text text-transparent">Valeurs</span>
          </h2>
          <p class="text-xl text-white/80 max-w-3xl mx-auto">
            Les principes qui guident chacune de nos actions et définissent notre identité
          </p>
        </div>

        <!-- Grille asymétrique de valeurs -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 lg:gap-8">
          <!-- Expertise locale - Grande carte -->
          <CardUltra className="group md:col-span-2 xl:col-span-2">
            <div class="relative p-8 h-full">
              <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-primary/30 to-transparent rounded-full blur-2xl"></div>
              <div class="relative z-10">
                <div class="w-16 h-16 bg-gradient-to-br from-primary to-green-400 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
                  <TargetIcon className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-2xl lg:text-3xl font-bold mb-4 group-hover:text-primary transition-colors duration-300">Expertise Locale</h3>
                <p class="text-white/80 leading-relaxed text-sm lg:text-base mb-6">
                  Connaissance approfondie du marché de Voglans et de la Savoie depuis notre création.
                  Nous vivons et travaillons sur ce territoire que nous connaissons intimement.
                </p>
                <div class="space-y-2 lg:space-y-3">
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-primary flex-shrink-0" />
                    <span class="text-white/80 text-sm">Maîtrise parfaite du territoire savoyard</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-primary flex-shrink-0" />
                    <span class="text-white/80 text-sm">Réseau local de partenaires de confiance</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-primary flex-shrink-0" />
                    <span class="text-white/80 text-sm">Analyse fine des spécificités locales</span>
                  </div>
                </div>
              </div>
            </div>
          </CardUltra>

          <!-- Flexibilité - Carte moyenne -->
          <CardUltra className="group md:col-span-2 xl:col-span-2">
            <div class="relative p-8 h-full">
              <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-yellow-400/30 to-transparent rounded-full blur-xl"></div>
              <div class="relative z-10">
                <div class="w-16 h-16 bg-gradient-to-br from-yellow-400 to-orange-400 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
                  <Zap className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-2xl lg:text-3xl font-bold mb-4 group-hover:text-yellow-400 transition-colors duration-300">Flexibilité</h3>
                <p class="text-white/80 leading-relaxed text-sm lg:text-base mb-6">
                  Service 100% digital avec accompagnement humain sur mesure selon vos besoins et objectifs.
                </p>
                <div class="space-y-2 lg:space-y-3">
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-yellow-400 flex-shrink-0" />
                    <span class="text-white/80 text-sm">Processus 100% digitalisés et modernes</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-yellow-400 flex-shrink-0" />
                    <span class="text-white/80 text-sm">Accompagnement humain personnalisé</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <CheckCircle className="w-4 h-4 lg:w-5 lg:h-5 text-yellow-400 flex-shrink-0" />
                    <span class="text-white/80 text-sm">Frais modulables selon objectifs</span>
                  </div>
                </div>
              </div>
            </div>
          </CardUltra>

          <!-- Transparence - Petite carte -->
          <CardUltra className="group md:col-span-1 xl:col-span-2">
            <div class="relative p-6 lg:p-8 h-full">
              <div class="absolute bottom-0 left-0 w-20 h-20 bg-gradient-to-br from-green-400/30 to-transparent rounded-full blur-xl"></div>
              <div class="relative z-10">
                <div class="w-12 h-12 lg:w-14 lg:h-14 bg-gradient-to-br from-green-400 to-emerald-400 rounded-xl flex items-center justify-center mb-4 lg:mb-6 group-hover:scale-110 transition-transform duration-500">
                  <Eye className="w-6 h-6 lg:w-7 lg:h-7 text-white" />
                </div>
                <h3 class="text-xl lg:text-2xl font-bold mb-3 lg:mb-4 group-hover:text-green-400 transition-colors duration-300">Transparence</h3>
                <p class="text-white/80 leading-relaxed mb-4 lg:mb-6 text-sm">
                  Processus clair et honnête, frais modulables selon objectifs atteints.
                </p>
                <div class="space-y-2">
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-green-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Honoraires modulables selon satisfaction</span>
                  </div>
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-green-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Communication transparente</span>
                  </div>
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-green-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Aucun frais caché</span>
                  </div>
                </div>
              </div>
            </div>
          </CardUltra>

          <!-- Engagement social - Petite carte -->
          <CardUltra className="group md:col-span-1 xl:col-span-2">
            <div class="relative p-6 lg:p-8 h-full">
              <div class="absolute bottom-0 right-0 w-20 h-20 lg:w-24 lg:h-24 bg-gradient-to-br from-orange-400/30 to-transparent rounded-full blur-xl"></div>
              <div class="relative z-10">
                <div class="w-12 h-12 lg:w-14 lg:h-14 bg-gradient-to-br from-orange-400 to-red-400 rounded-xl flex items-center justify-center mb-4 lg:mb-6 group-hover:scale-110 transition-transform duration-500">
                  <HandHeart className="w-6 h-6 lg:w-7 lg:h-7 text-white" />
                </div>
                <h3 class="text-xl lg:text-2xl font-bold mb-3 lg:mb-4 group-hover:text-orange-400 transition-colors duration-300">Engagement Social</h3>
                <p class="text-white/80 leading-relaxed mb-4 lg:mb-6 text-sm">
                  Nous croyons en un immobilier responsable et solidaire pour notre territoire.
                </p>
                <div class="space-y-2">
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-orange-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Soutien aux projets immobiliers locaux</span>
                  </div>
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-orange-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Partenariat avec acteurs du territoire</span>
                  </div>
                  <div class="flex items-center gap-2 lg:gap-3">
                    <CheckCircle className="w-4 h-4 text-orange-400 flex-shrink-0" />
                    <span class="text-white/80 text-xs lg:text-sm">Contribution au développement durable</span>
                  </div>
                </div>
              </div>
            </div>
          </CardUltra>
        </div>
      </div>
    </div>
  </section>

  <!-- Expertise Immobilière Révolutionnaire -->
  <section class="py-32 bg-white relative overflow-hidden">
    <!-- Formes géométriques flottantes -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-4 h-4 bg-primary rounded-full animate-float"></div>
      <div class="absolute top-40 right-40 w-6 h-6 bg-yellow-400 rounded-full animate-float delay-1000"></div>
      <div class="absolute bottom-40 left-40 w-3 h-3 bg-green-400 rounded-full animate-float delay-500"></div>
      <div class="absolute bottom-20 right-20 w-5 h-5 bg-orange-400 rounded-full animate-float delay-1500"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-3 bg-gradient-to-r from-primary/10 to-yellow-200/20 backdrop-blur-sm border border-primary/20 text-primary px-6 py-3 rounded-full text-sm font-semibold shadow-xl mb-8">
            <AwardIcon className="w-4 h-4" />
            <span>Nos Spécialités</span>
          </div>
          <h2 class="text-5xl md:text-7xl font-black mb-8">
            Notre <span class="bg-gradient-to-r from-primary via-green-400 to-yellow-400 bg-clip-text text-transparent">Expertise</span>
          </h2>
          <p class="text-xl text-muted max-w-3xl mx-auto">
            Spécialisés particuliers et professionnels, nous accompagnons tous vos projets immobiliers avec excellence
          </p>
        </div>

        <!-- Layout asymétrique -->
        <div class="relative">
          <!-- Particuliers - Grande section -->
          <div class="mb-20">
            <CardUltra className="group relative overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-green-400/90"></div>
              <div class="absolute inset-0 bg-black/20"></div>
              <div class="relative z-10 p-12 text-white">
                <div class="flex items-start gap-8">
                  <div class="w-24 h-24 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                    <Home className="w-12 h-12 text-white" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-4xl font-bold mb-6">Particuliers</h3>
                    <p class="text-xl text-white/90 mb-8 leading-relaxed">
                      Vente appartements/maisons, investissement résidentiel - nous vous accompagnons dans tous vos projets immobiliers personnels avec une expertise complète.
                    </p>
                    <div class="grid grid-cols-2 gap-4">
                      <div class="flex items-center gap-3">
                        <CheckCircle className="w-6 h-6 text-white" />
                        <span>Vente de maisons et appartements</span>
                      </div>
                      <div class="flex items-center gap-3">
                        <CheckCircle className="w-6 h-6 text-white" />
                        <span>Investissement locatif résidentiel</span>
                      </div>
                      <div class="flex items-center gap-3">
                        <CheckCircle className="w-6 h-6 text-white" />
                        <span>Premier achat et résidence principale</span>
