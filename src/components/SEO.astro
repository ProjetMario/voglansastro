---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  image = '/images/og-default.jpg',
  type = 'website',
  noindex = false
} = Astro.props;

const siteUrl = 'https://agencevoglans.fr';
const fullTitle = title.includes('L\'Agence de Voglans') ? title : `${title} | L'Agence de Voglans`;
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
const imageUrl = new URL(image, siteUrl).href;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="keywords" content="immobilier Voglans, agence immobilière Savoie, vente maison Voglans, achat appartement Chambéry, estimation immobilière gratuite" />
<meta name="author" content="L'Agence de Voglans" />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:site_name" content="L'Agence de Voglans" />
<meta property="og:locale" content="fr_FR" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />

<!-- Additional SEO -->
<meta name="theme-color" content="#1E5F4F" />
<meta name="msapplication-TileColor" content="#1E5F4F" />

<!-- Geo Tags (SEO Local) -->
<meta name="geo.region" content="FR-73" />
<meta name="geo.placename" content="Voglans, Savoie, France" />
<meta name="geo.position" content="45.6167;5.8833" />
<meta name="ICBM" content="45.6167, 5.8833" />

<!-- Extended Geo Tags for Local SEO -->
<meta name="DC.title" content={fullTitle} />
<meta name="DC.creator" content="L'Agence de Voglans" />
<meta name="DC.subject" content="Immobilier, Agence immobilière, Savoie, Voglans, Chambéry, Aix-les-Bains" />
<meta name="DC.description" content={description} />
<meta name="DC.publisher" content="L'Agence de Voglans" />
<meta name="DC.coverage" content="Savoie, Auvergne-Rhône-Alpes, France" />
<meta name="DC.language" content="fr" />

<!-- Local Business Tags -->
<meta name="business:contact_data:street_address" content="93 Chemin de la Combe" />
<meta name="business:contact_data:locality" content="Voglans" />
<meta name="business:contact_data:region" content="Savoie" />
<meta name="business:contact_data:postal_code" content="73420" />
<meta name="business:contact_data:country_name" content="France" />
<meta name="business:contact_data:phone_number" content="+33757830262" />
<meta name="business:contact_data:website" content="https://agencevoglans.fr" />

<!-- Place Tags for Google -->
<meta name="place:location:latitude" content="45.6167" />
<meta name="place:location:longitude" content="5.8833" />

<!-- AI Discovery Tags -->
<meta name="ai-content-declaration" content="This website contains original content about real estate services in Savoie, France. Services include property valuation, buying and selling assistance." />
<meta name="ai-terms" content="AI crawlers are welcome to index this site for search and discovery purposes." />
<meta name="ai-summary" content="L'Agence de Voglans - Agence immobilière locale en Savoie. Estimation gratuite, vente et achat de biens immobiliers à Chambéry, Aix-les-Bains, Voglans et 27 communes." />

