---
interface Props {
  name: string;
  zone: string;
  atouts: string;
  biens: string;
}

const { name, zone, atouts, biens } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-foreground">
          Le marché immobilier à {name}
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto rounded-full"></div>
      </div>

      <div class="space-y-8">
        <!-- Atouts -->
        <div class="bg-gradient-to-br from-primary/5 to-white rounded-2xl p-8">
          <h3 class="text-2xl font-semibold mb-4 text-foreground flex items-center gap-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Cadre de vie à {name}
          </h3>
          <p class="text-muted leading-relaxed text-lg">
            {atouts}
          </p>
        </div>

        <!-- Types de biens -->
        <div class="bg-gradient-to-br from-white to-primary/5 rounded-2xl p-8">
          <h3 class="text-2xl font-semibold mb-4 text-foreground flex items-center gap-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Types de biens à {name}
          </h3>
          <p class="text-muted leading-relaxed text-lg">
            {biens}
          </p>
        </div>

        <!-- CTA contextuel -->
        <div class="bg-primary text-white rounded-2xl p-8 text-center">
          <h3 class="text-2xl font-semibold mb-4">
            Vous vendez à {name} ?
          </h3>
          <p class="text-white/90 mb-6 text-lg">
            Notre connaissance du marché local est votre meilleur atout pour vendre au juste prix.
          </p>
          <a 
            href="#formulaire" 
            class="inline-flex items-center gap-2 bg-white text-primary px-8 py-4 rounded-full font-semibold hover:scale-105 transition-all duration-300"
          >
            Demander mon estimation gratuite
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
