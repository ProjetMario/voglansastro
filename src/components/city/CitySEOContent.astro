---
interface Props {
  name: string;
  seoContent?: {
    quartiers: string;
    prixMoyen: string;
    tendances: string;
    conseils: string;
  };
}

const { name, seoContent } = Astro.props;

// Si pas de contenu SEO, ne rien afficher
if (!seoContent) return null;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-foreground">
          Guide complet de l'immobilier à {name}
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Quartiers populaires -->
        <div class="bg-gradient-to-br from-primary/5 to-white rounded-2xl p-8 border border-primary/10">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground">Quartiers recherchés</h3>
          </div>
          <p class="text-muted leading-relaxed">
            {seoContent.quartiers}
          </p>
        </div>

        <!-- Prix moyen -->
        <div class="bg-gradient-to-br from-primary/5 to-white rounded-2xl p-8 border border-primary/10">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground">Prix au m²</h3>
          </div>
          <p class="text-muted leading-relaxed">
            <strong class="text-primary text-2xl block mb-2">{seoContent.prixMoyen}</strong>
            Prix moyen constaté pour les biens à {name}
          </p>
        </div>

        <!-- Tendances du marché -->
        <div class="bg-gradient-to-br from-primary/5 to-white rounded-2xl p-8 border border-primary/10">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground">Tendances 2025</h3>
          </div>
          <p class="text-muted leading-relaxed">
            {seoContent.tendances}
          </p>
        </div>

        <!-- Conseils d'expert -->
        <div class="bg-gradient-to-br from-primary/5 to-white rounded-2xl p-8 border border-primary/10">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground">Conseil d'expert</h3>
          </div>
          <p class="text-muted leading-relaxed">
            {seoContent.conseils}
          </p>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12 bg-primary text-white rounded-2xl p-8 text-center">
        <h3 class="text-2xl font-semibold mb-4">
          Besoin d'une estimation précise à {name} ?
        </h3>
        <p class="text-white/90 mb-6 text-lg">
          Notre expertise locale nous permet de vous fournir une estimation au plus juste du marché.
        </p>
        <a 
          href="#formulaire" 
          class="inline-flex items-center gap-2 bg-white text-primary px-8 py-4 rounded-full font-semibold hover:scale-105 transition-all duration-300"
        >
          Obtenir mon estimation gratuite
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
