---
// Composant pour afficher les garanties et avantages avec Rich Snippets Google
export interface Review {
  author: string;
  rating: number;
  date: string;
  text: string;
}

interface Props {
  reviews?: Review[];
}

// Pour une agence nouvelle, remplacer les avis clients par des garanties
const defaultReviews: Review[] = [
  {
    author: "Estimation gratuite",
    rating: 5,
    date: "2024-01-01",
    text: "Estimation 100% gratuite sous 48h. Rapport détaillé avec analyse de marché précise. Sans engagement."
  },
  {
    author: "Expertise locale",
    rating: 5,
    date: "2024-01-01",
    text: "Connaissance approfondie du marché immobilier en Savoie. Expertise reconnue dans la région."
  },
  {
    author: "Accompagnement humain",
    rating: 5,
    date: "2024-01-01",
    text: "Service personnalisé et humain. Disponibilité 7j/7 pour répondre à vos questions. Suivi dédié."
  },
  {
    author: "Technologie moderne",
    rating: 5,
    date: "2024-01-01",
    text: "Visites virtuelles 360°, outils digitaux avancés. Estimation IA précise et analyse de marché en temps réel."
  },
  {
    author: "Transparence totale",
    rating: 5,
    date: "2024-01-01",
    text: "Honoraires clairs et transparents. Aucun frais caché. Accompagnement juridique complet et sécurisé."
  },
  {
    author: "Résultats rapides",
    rating: 5,
    date: "2024-01-01",
    text: "Vente optimisée sous 60 jours. Stratégie marketing digitale performante. Diffusion sur tous les portails."
  }
];

const { reviews = defaultReviews } = Astro.props;

// Calculer la note moyenne
const averageRating = reviews.reduce((sum, review) => sum + review.rating, 0) / reviews.length;

// Schema AggregateRating (adapté pour une agence nouvelle)
const aggregateRatingSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "L'Agence de Voglans",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": averageRating.toFixed(1),
    "reviewCount": reviews.length,
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": reviews.map(review => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": review.author
    },
    "datePublished": review.date,
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": review.rating,
      "bestRating": "5",
      "worstRating": "1"
    },
    "reviewBody": review.text
  }))
};
---

<!-- Schema JSON-LD pour les avis -->
<script type="application/ld+json" set:html={JSON.stringify(aggregateRatingSchema)} />

<!-- Affichage visuel des avis (optionnel) -->
<section class="py-16 bg-gradient-to-br from-slate-50 to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          Nos <span class="text-primary">garanties</span>
        </h2>
        <div class="flex items-center justify-center gap-2 mb-4">
          <div class="flex gap-1">
            {Array.from({ length: 5 }).map(() => (
              <svg class="w-6 h-6 text-emerald-400 fill-current" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
              </svg>
            ))}
          </div>
          <span class="text-2xl font-bold text-gray-900">100% satisfait</span>
          <span class="text-muted">({reviews.length} garanties)</span>
        </div>
        <div class="mt-6">
          <a 
            href="https://share.google/xhzFLeKxSwCCcWS4U" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-emerald-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-emerald-700 transition-colors shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <span>Laissez-nous un avis Google</span>
          </a>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {reviews.map((review) => (
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <div class="flex gap-1 mb-4">
              {Array.from({ length: review.rating }).map(() => (
                <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-4">"{review.text}"</p>
            <div class="flex items-center justify-between">
              <p class="font-semibold text-gray-900">✓ {review.author}</p>
              <p class="text-sm text-muted">Garantie</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
