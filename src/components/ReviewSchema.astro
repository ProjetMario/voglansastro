---
// Composant pour afficher les avis clients avec Rich Snippets Google
export interface Review {
  author: string;
  rating: number;
  date: string;
  text: string;
}

interface Props {
  reviews?: Review[];
}

const defaultReviews: Review[] = [
  {
    author: "Marie Dupont",
    rating: 5,
    date: "2024-09-15",
    text: "Excellente agence ! Estimation précise et vente rapide de ma maison à Voglans. Service professionnel et humain."
  },
  {
    author: "Jean Martin",
    rating: 5,
    date: "2024-08-22",
    text: "Très satisfait de l'accompagnement. L'équipe connaît parfaitement le marché savoyard. Je recommande vivement !"
  },
  {
    author: "Sophie Bernard",
    rating: 5,
    date: "2024-07-10",
    text: "Agence locale et réactive. Estimation gratuite reçue en 24h, très détaillée. Parfait pour vendre à Chambéry."
  }
];

const { reviews = defaultReviews } = Astro.props;

// Calculer la note moyenne
const averageRating = reviews.reduce((sum, review) => sum + review.rating, 0) / reviews.length;

// Schema AggregateRating
const aggregateRatingSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "L'Agence de Voglans",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": averageRating.toFixed(1),
    "reviewCount": reviews.length,
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": reviews.map(review => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": review.author
    },
    "datePublished": review.date,
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": review.rating,
      "bestRating": "5",
      "worstRating": "1"
    },
    "reviewBody": review.text
  }))
};
---

<!-- Schema JSON-LD pour les avis -->
<script type="application/ld+json" set:html={JSON.stringify(aggregateRatingSchema)} />

<!-- Affichage visuel des avis (optionnel) -->
<section class="py-16 bg-gradient-to-br from-slate-50 to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          Ils nous font <span class="text-primary">confiance</span>
        </h2>
        <div class="flex items-center justify-center gap-2 mb-4">
          <div class="flex gap-1">
            {Array.from({ length: 5 }).map(() => (
              <svg class="w-6 h-6 text-yellow-400 fill-current" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
              </svg>
            ))}
          </div>
          <span class="text-2xl font-bold text-gray-900">{averageRating.toFixed(1)}/5</span>
          <span class="text-muted">({reviews.length} avis)</span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {reviews.map((review) => (
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <div class="flex gap-1 mb-4">
              {Array.from({ length: review.rating }).map(() => (
                <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-4 italic">"{review.text}"</p>
            <div class="flex items-center justify-between">
              <p class="font-semibold text-gray-900">{review.author}</p>
              <p class="text-sm text-muted">{new Date(review.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long' })}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
