---
export interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav aria-label="Fil d'Ariane" class={`flex items-center space-x-2 text-sm ${className}`}>
  <ol class="flex items-center space-x-2">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="w-4 h-4 text-muted mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        )}
        {item.href ? (
          <a
            href={item.href}
            class="text-muted hover:text-primary transition-colors duration-200"
            aria-current={index === items.length - 1 ? "page" : undefined}
          >
            {item.label}
          </a>
        ) : (
          <span
            class={`font-medium ${index === items.length - 1 ? 'text-foreground' : 'text-muted'}`}
            aria-current={index === items.length - 1 ? "page" : undefined}
          >
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  [aria-current="page"] {
    @apply text-primary font-semibold;
  }
</style>
