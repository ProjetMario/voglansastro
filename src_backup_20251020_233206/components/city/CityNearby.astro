---
import type { Commune } from '../../data/communes';

interface Props {
  communesProches: string[];
  allCommunes: Commune[];
  currentSlug: string;
}

const { communesProches, allCommunes, currentSlug } = Astro.props;

// Récupérer les données des communes proches (max 6)
const nearbyCommunes = communesProches
  .filter(slug => slug !== currentSlug)
  .slice(0, 6)
  .map(slug => allCommunes.find(c => c.slug === slug))
  .filter(Boolean);
---

{nearbyCommunes.length > 0 && (
  <section class="py-16 bg-white border-t border-border">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-foreground">
            Nous intervenons aussi à...
          </h2>
          <p class="text-xl text-muted">
            Découvrez nos services d'estimation dans les communes proches
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {nearbyCommunes.map((commune) => (
            <a 
              href={`/estimation/${commune.slug}`}
              class="group bg-gradient-to-br from-white to-primary/5 rounded-xl p-6 border-2 border-primary/10 hover:border-primary/30 hover:shadow-lg transition-all duration-300"
            >
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3 class="text-xl font-semibold text-foreground group-hover:text-primary transition-colors">
                    {commune.name}
                  </h3>
                  <p class="text-sm text-muted">
                    {commune.zone} • {commune.dept}
                  </p>
                </div>
                <svg 
                  class="w-6 h-6 text-primary opacity-0 group-hover:opacity-100 transform translate-x-0 group-hover:translate-x-1 transition-all duration-300" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </div>
              <p class="text-sm text-muted line-clamp-2">
                Estimation immobilière gratuite et sans engagement à {commune.name}
              </p>
            </a>
          ))}
        </div>

        <!-- Lien vers zone complète -->
        <div class="mt-12 text-center">
          <a 
            href="/zone-intervention" 
            class="inline-flex items-center gap-2 text-primary hover:text-primary-dark font-semibold text-lg group"
          >
            Voir toutes nos communes d'intervention
            <svg 
              class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
)}
