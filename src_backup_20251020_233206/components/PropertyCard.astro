---
import Badge from '@/components/ui/Badge.astro';
import { MapPin, Maximize, BedDouble, ArrowRight } from 'lucide-react';
import { formatPrice, formatSurface, getEnergyColor } from '@/lib/utils';

export interface Props {
  property: {
    slug: string;
    data: {
      title: string;
      type: string;
      ville: string;
      surface: number;
      pieces?: number;
      prix: number;
      images: string[];
      energie?: string;
      badges: string[];
    };
  };
}

const { property } = Astro.props;
const { slug, data } = property;
---

<article class="card card-hover group">
  <!-- Image principale -->
  <div class="relative aspect-photo overflow-hidden rounded-xl mb-4">
    <img 
      src={data.images[0]} 
      alt={data.title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
    
    <!-- Badges -->
    {data.badges.length > 0 && (
      <div class="absolute top-3 left-3 flex flex-wrap gap-2">
        {data.badges.map(badge => (
          <Badge badge={badge} />
        ))}
      </div>
    )}
    
    <!-- DPE Badge -->
    {data.energie && (
      <div class="absolute top-3 right-3">
        <div class={`w-8 h-8 rounded-lg flex items-center justify-center text-white text-sm font-bold ${getEnergyColor(data.energie)}`}>
          {data.energie}
        </div>
      </div>
    )}
    
    <!-- Overlay hover -->
    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300 flex items-center justify-center">
      <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="bg-white/90 backdrop-blur-sm rounded-full p-3">
          <ArrowRight className="w-5 h-5 text-foreground" />
        </div>
      </div>
    </div>
  </div>

  <!-- Contenu -->
  <div class="space-y-3">
    <!-- Prix -->
    <div class="text-2xl font-bold text-primary">
      {formatPrice(data.prix)}
    </div>
    
    <!-- Titre -->
    <h3 class="font-semibold text-lg leading-tight line-clamp-2">
      {data.title}
    </h3>
    
    <!-- Localisation -->
    <div class="flex items-center gap-2 text-muted">
      <MapPin className="w-4 h-4 flex-shrink-0" />
      <span class="text-sm">{data.ville}</span>
    </div>
    
    <!-- Caractéristiques -->
    <div class="flex items-center gap-4 text-sm text-muted">
      <div class="flex items-center gap-1">
        <Maximize className="w-4 h-4" />
        <span>{formatSurface(data.surface)}</span>
      </div>
      {data.pieces && (
        <div class="flex items-center gap-1">
          <BedDouble className="w-4 h-4" />
          <span>{data.pieces} pièces</span>
        </div>
      )}
      <div class="capitalize">
        <span>{data.type}</span>
      </div>
    </div>
  </div>
  
  <!-- Lien vers la fiche -->
  <a 
    href={`/acheter/${slug}`}
    class="absolute inset-0 z-10"
    aria-label={`Voir les détails de ${data.title}`}
  >
    <span class="sr-only">Voir les détails</span>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
